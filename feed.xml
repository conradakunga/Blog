---
layout: nil
permalink: /feed.xml
---
<feed xmlns="http://www.w3.org/2005/Atom">
<generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>
<link href="{{ site.url}}{{ site.baseurl }}/feed.xml" rel="self" type="application/atom+xml"/>
<link href="{{ site.url}}{{ site.baseurl }}" rel="alternate" type="text/html"/>
<updated>{{ site.time | date: "%Y-%m-%dT%H:%M:%S%:z"}}</updated>
<id>{{ site.url}}{{ site.baseurl }}/feed.xml</id>
<title type="html">{{ site.title | xml_escape }}</title>
<subtitle>{{ site.description | xml_escape }}</subtitle>
{% for post in site.posts limit:15%}
  <entry>
    <title type="html">{{ post.title | xml_escape }}</title>
    <link href="{{ site.url}}{{ site.baseurl }}{{ post.url }}" rel="alternate" type="text/html" title="{{ post.title | xml_escape }}"/>
    <published>{{ post.date | date: "%Y-%m-%dT%H:%M:%S%:z" }}</published>
    <updated>{{ post.date | date: "%Y-%m-%dT%H:%M:%S%:z" }}</updated>
    <id>{{ site.url}}{{ site.baseurl }}{{ post.url }}</id>
    <content type="html" xml:base="{{ site.url}}{{ site.baseurl }}{{ post.url }}">
    {%- assign date_format = site.minima.date_format | default: "%A, %b %-d, %Y" -%}
    <![CDATA[ {{ post.content }} 
    <div><h5><b>This post, <a href="{{ site.url}}{{ site.baseurl }}{{ post.url }}">{{ post.title }}</a>, was originally posted on the blog <a href="{{ site.url }}{{ site.baseurl }}/">{{ site.title }}</a> on {{ post.date | date: date_format }}</b></h5></div>]]>
    </content>
    <author>
        <name>{{ site.author.name }}</name>
    </author>
{% for category in post.categories %}
    <category term="{{ category | xml_escape }}"/>
{% endfor %}
  <summary type="html">
    <![CDATA[ {{ post.excerpt | strip_html }} ]]>
    </summary>
    </entry>
{% endfor %}
</feed>